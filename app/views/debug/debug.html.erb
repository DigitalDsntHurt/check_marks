<h1>Debug#debug</h1>
<p>Find me in app/views/debug/debug.html.erb</p>


<table>
  <thead>
    <tr>
      <th>verb</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th>notes</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checks.sort_by{|check| check.deadline }.each do |check| %>
      <tr>
        <td> &nbsp; </td>
        <td><%= check.title %></td>
        <td>on</td>
        <td><%= check.deadline %></td>
        <td>
          <% if check.completed_at != nil %>
            <center><strong>Done!<br> on <%= check.completed_at %></strong></center>
          <% else %>
            <center><%= button_to "Check It", {:controller => "checks", :action => "check_mark", :id => check.id}, :method=>:put %></center>
          <% end %>
        </td>
        <td> &nbsp; * &nbsp; </td>
        <td><%= link_to 'Show', check %></td>
        <td><%= link_to 'Edit', edit_check_path(check) %></td>
        <td><%= link_to 'Destroy', check, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>